<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_checked="true" android:state_pressed="true">
    	<shape>
            <solid android:color="#33B5E5" />
            <stroke
                android:width="1dp"
                android:color="#0099CC" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_checked="true" android:state_pressed="false">
    	<shape>
            <gradient
                android:startColor="#33B5E5"
                android:centerColor="#0099CC"
                android:endColor="#0099CC"
                android:angle="90"/>
            <stroke
                android:width="1dp"
                android:color="#0099CC" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
	<item android:state_checked="false" android:state_pressed="false">
	    <shape>
            <solid android:color="#ff666666" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
	</item>
	    
	<item android:state_checked="false" android:state_pressed="true">
    	<shape>
            <solid android:color="#0099CC" />
            <stroke
                android:width="1dp"
                android:color="#0099CC" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
	</item>
    
</selector>